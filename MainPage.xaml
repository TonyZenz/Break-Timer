<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTimer.MainPage" x:Name="ftmMain">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">
            
            <Label x:Name="lblDisplay" Text="Break time!" FontSize="Title" Padding="0,75" HorizontalOptions="Center"/>
            
            <Button x:Name="btnTakeFive" Text="Take 5" Clicked="BtnTakeFive_OnClicked"/>
            <Button x:Name="btnTakeTen" Text="Take 10" Clicked="BtnTakeTen_OnClicked"/>
            <Button x:Name="btnTakeFifteen" Text="Take 15" Clicked="BtnTakeFifteen_OnClicked"/>

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
